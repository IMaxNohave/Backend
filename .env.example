############################################
# DATABASE (MySQL 8.4.x)
############################################
# ชื่อโฮสต์ของ MySQL
# - ถ้าใช้ Docker Compose: ใช้ชื่อ service "database"
# - ถ้ารัน MySQL บนเครื่อง: ใช้ localhost
MYSQL_HOST=

# พอร์ต MySQL (ค่า default คือ 3306)
MYSQL_PORT=

# ชื่อฐานข้อมูลที่จะใช้กับแอป
MYSQL_DB=

# ผู้ใช้/รหัสผ่านของ "แอป" (มีสิทธิ์ DDL/CRUD ใน DB นี้)
# *ถ้า migration ด้วย drizzle ต้องมีสิทธิ์ CREATE/ALTER
MYSQL_APP_USER=
MYSQL_APP_PASSWORD=

# (สำคัญ) URL สำหรับเครื่องมืออย่าง drizzle-kit
# รูปแบบ: mysql://USER:PASS@HOST:PORT/DBNAME
DATABASE_URL=

# รหัสผ่าน root ของ MySQL (ใช้เฉพาะตอน init หรืองานแอดมิน)
MYSQL_ROOT_PASSWORD=

############################################
# BACKEND SERVER
############################################
# พอร์ตของ backend (Elysia) ภายใน container คือ 3000
# ด้านนอก map เป็น ${PORT}:3000 ตาม docker-compose
PORT=

# URL ต้นทางของ Frontend (ใช้ทำ CORS/callback ฯลฯ)
# - ถ้า front รันที่พอร์ต 3001: ใช้ค่าแบบนี้
FRONTEND_URL=


############################################
# AUTH (Better Auth)
############################################
BETTER_AUTH_SECRET=
BETTER_AUTH_URL=


############################################
# OAUTH PROVIDERS
############################################
# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Roblox OAuth 
ROBLOX_CLIENT_ID=
ROBLOX_CLIENT_SECRET=


############################################
# OBJECT STORAGE (Cloudflare R2) used for image/video storing
############################################
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET=
R2_REGION=
R2_PUBLIC_BASE=


############################################
# PAYMENTS / SLIP VERIFY 
############################################
SLIP2GO_SECRET=
SLIP2GO_API=


############################################
# REDIS
############################################
REDIS_URL=


############################################
# JOBS / WORKERS
############################################
# เปิด background jobs (คิวหมดอายุออเดอร์)
# 0 = ปิด , 1 = เปิด
ENABLE_JOBS=
